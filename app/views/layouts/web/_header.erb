  <main>
	<section class="row">
			<div class="col-md-10">
				<h1><a href="/">Expense Manager</a></h1>
			</div>
		<% if current_user.present? %>
			<div class='col-md-2' >
				<%=current_user.email%>
				<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> <br>
				<%= link_to "Home", root_path, :class => 'navbar-link'  %>
			</div>
		<% else %>
				<div class='col-md-2' >
				<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
				<%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %> <br>
				<%= link_to "Home", root_path, :class => 'navbar-link'  %>
			</div>
		<% end %>
	</section>
</main>

