<h1>New Expense</h1>

<%= form_for(@expenditure) do |f| %>
	<% if @expenditure.errors.any? %>
		<div id="error_explanation">
		  <h2><%= pluralize(@expenditure.errors.count, "error") %> prohibited this Expense from being saved:</h2>
		  <ul>
		    <% @expenditure.errors.full_messages.each do |message| %>
		    	<li><%= message %></li>
		    <% end %>
		  </ul>
		</div>
	<% end %>
	<div class="field">
	  <%= f.label :amount %>
	  <%= f.number_field :amount,:required => true %>
	</div>
	<div id="category">
	  <%= f.fields_for :category, Category.new do |fact| %>
	  <%= fact.label :category %>
	  <%= fact.collection_select "name", Category.all, :name, :name  %>
	  <% end %>
	</div>
	<br>

	<div class="actions">
	  <%= f.submit %>
	</div>
<% end %>

<%= link_to 'Back', expenditures_path %>
