<p id="notice"><%= notice %></p>
<h2>Incomes</h2>
<table border=1 class="half_screen">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Category</th>
      <th>Created At</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% if @incomes.present? %> 
      <% @incomes.each do |income| %>
        <tr>
          <td><%= income.amount %></td>
          <td><%= income.category.name %></td>
          <td><%= income.created_at.to_date %></td>
          <td><%= link_to 'Show', income %></td>
          <td><%= link_to 'Edit', edit_income_path(income) %></td>
          <td><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <%else%>
      <tr>
        <td colspan="5">No Data Found</td>
      </tr>
    <%end%>
  </tbody>
</table>
<br>
<%= link_to 'New Income', new_income_path %> |
