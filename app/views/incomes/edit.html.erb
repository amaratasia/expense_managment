<h1>Editing Income</h1>

<%= form_for(@income) do |f| %>
  <div class="field">
    <%= f.label :amount %>
    <%= f.number_field :amount,  min: 1 %>
  </div>

  <%= f.fields_for :category do |fact| %>
    <%= fact.label :name %>
    <%#= select_tag "category", options_from_collection_for_select(@category, 'name','name', @income.category.name)%>
    <%= fact.collection_select "name", Category.all, :name, :name  %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Show', @income %> |
<%= link_to 'Back', incomes_path %>
